.skeleton-group {
 display: table;
  width: 100%;
  box-sizing: border-box;
  height: 140px;
  background-color: #fff;
  margin-top: 1rpx;
  margin-bottom: 20rpx;
  border-bottom: 10rpx #ccc solid;
}

.book {
  height: 130px;
  width: 100px;
  border: 1px solid #ddd;
}
.picb{
  width: 100%;
  height: 100%;
}
.skeleton-group-cover, .skeleton-group-text {
  display: table-cell;
  vertical-align: middle;
}

.skeleton-group-cover {
  padding: 30rpx 10rpx;
  width: 100px;
  margin-left: 30rpx;
  margin-right: 40rpx;
  border-radius: 4rpx;
  float: left;
}

